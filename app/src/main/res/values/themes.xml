<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiniProjet" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bleu_clair</item>
        <item name="colorPrimaryVariant">@color/bleu_clair</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/bleu_clair</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MiniProjet.Fullscreen" parent="Theme.MiniProjet">
        <item name="android:actionBarStyle">@style/Widget.Theme.MiniProjet.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MiniProjet.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <style name="BlueSearchViewTheme">
        <item name="colorControlNormal">@color/bleu_clair</item>
    </style>
</resources>